{
  "name": "the-philosophers-components",
  "license": "UNLICENSED",
  "version": "0.0.15",
  "main": "src/index.js",
  "files": [
    "src/**"
  ],
  "description": "My personal repository of UI components",
  "author": "AristotleTheAxolotl",
  "watch": {
    "test": "{src,test}/**/*.js",
    "lint": "{src,test}/**/*.js",
    "dist": "{src}/**/*.js"
  },
  "scripts": {
    "format": "prettier **/*.js --write",
    "lint": "eslint src/**/*.js test/**/*.js",
    "lint:watch": "npm-watch lint",
    "test:ui": "karma start",
    "test:ui:watch": "karma start --single-run=false --auto-watch=true",
    "test": "npm run test:ui",
    "test:watch": "concurrently \"npm:test:ui:watch\"",
    "server": "es-dev-server --app-index demo/index.html --node-resolve --watch  --open",
    "server:be": "cross-env DEV=y node ./server/index.js",
    "server:fe": "es-dev-server",
    "server:prod": "npm run dist && node ./dist/server/index.js",
    "start": "concurrently \"npm:server\" \"npm:dist\" \"npm:lint\" \"npm:test\"",
    "dev": "webpack-dev-server --env.mode development",
    "dist": "webpack --env.mode production",
    "build": "npm run test && npm run lint && npm run format && webpack",
    "init": "npm install"
  },
  "dependencies": {
    "@open-wc/webpack-import-meta-loader": "^0.3.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "cookie-parser": "1.4.*",
    "copy-webpack-plugin": "^5.0.5",
    "es-dev-server": "^1.18.0",
    "express": "4.17.*",
    "html-webpack-plugin": "^3.2.0",
    "imagesloaded": "^4.1.4",
    "karma": "^4.4.1",
    "karma-static": "^1.0.1",
    "karma-webpack": "^5.0.0-alpha.3.0",
    "lit-element": "2.2.*",
    "lit-html": "1.1.*",
    "mysql": "^2.17.1",
    "node-fetch": "2.6.*",
    "requirejs": "^2.3.6",
    "uuid": "3.3.*",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@open-wc/building-rollup": "^0.12.12",
    "@open-wc/eslint-config": "^1.3.0",
    "@open-wc/prettier-config": "^0.1.12",
    "@open-wc/testing": "^2.3.9",
    "@open-wc/testing-karma": "^3.1.54",
    "@webcomponents/webcomponentsjs": "^2.3.0",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chalk": "3.0.0",
    "concurrently": "^5.0.0",
    "cross-env": "6.0.3",
    "es-dev-server": "1.23.1",
    "eslint": "6.6.0",
    "eslint-plugin-no-only-tests": "^2.3.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "fs-extra": "8.1.0",
    "glogg": "1.0.2",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "husky": "^3.0.9",
    "koa-proxies": "0.9.0",
    "lint-staged": "^9.4.2",
    "mocha": "6.2.2",
    "npm-check": "5.9.0",
    "npm-watch": "0.6.0",
    "prompt": "1.0.0",
    "rimraf": "^3.0.0",
    "rmfr": "^2.0.0",
    "rollup": "^1.26.3",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "sonarjs": "^1.0.0",
    "static-site-generator-webpack-plugin": "^3.4.2",
    "webpack-merge": "^4.2.2",
    "yargs": "14.2.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
