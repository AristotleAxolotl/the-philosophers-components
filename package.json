{
  "name": "the-philosophers-components",
  "version": "0.0.5",
  "main":"src/index.js",
  "files":[
    "src/**"
  ],
  "description": "My personal repository of UI components",
  "author": "AristotleTheAxolotl",
  "scripts": {
    "format": "gulp format",
    "lint": "gulp lint",
    "lint:watch": "gulp lint_watch",
    "dist": "gulp dist",
    "dist:watch": "gulp dist_watch",
    "test": "gulp test",
    "test:watch": "gulp test_watch",
    "server": "owc-dev-server --app-index demo/index.html --open --watch",
    "start": "concurrently \"npm:server\" \"npm:lint:watch\" \"npm:test:watch\"",
    "build": "gulp build",
    "init": "npm install && npm run build"
  },
  "dependencies": {
    "es-dev-server": "^1.17.2",
    "lit-element": "2.2.*",
    "lit-html": "1.1.*"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.0",
    "@open-wc/building-rollup": "^0.3.0",
    "@open-wc/eslint-config": "^0.4.1",
    "@open-wc/prettier-config": "^0.1.0",
    "@open-wc/testing": "^0.11.1",
    "@open-wc/testing-karma": "^1.0.0",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "eslint-plugin-sonarjs": "^0.3.0",
    "gulp-eslint": "^5.0.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "owc-dev-server": "^0.4.3",
    "rimraf": "^2.6.3",
    "rollup": "^1.6.0",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "sonarjs": "^1.0.0",
    "webpack-merge": "^4.1.5",
    "eslint-plugin-no-only-tests": "^2.3.0",
    "rmfr": "^2.0.0",
    "gulp": "^4.0.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
